html
    head
        title WordPress Install
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css')

        style.
            html,
            body {
                height: 100%;
            }

            body {
                display: flex;
                align-items: center;
                padding-top: 40px;
                padding-bottom: 40px;
                background-color: #f5f5f5;
            }

            main {
                display: block;
            }
            
            .content {
                width: 100%;
                max-width: 500px;
                padding: 15px;
                margin: auto;
                align-items: center;
            }
    body
        main(class="content")
            form(action="/wordpress-install/0fd93714-b026-491e-901e-820419b615f9", method="post")
                label(for="siteName") Enter your Site Name:
                input#siteName(type="text", name="siteName" class="form-control" placeholder="Your Site Name ONLY")
                br
                button(type="submit" class="w-100 btn btn-lg btn-primary") Continue
                br
                p!= 'This will take a few seconds to run <br/>DO NOT close window after hitting Continue.'

        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js")